<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DolarJson.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Dolar" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button x:Name="btnPesquisa" Text="Pesquisar" Clicked="btnPesquisa_Clicked" />

        <Entry x:Name="edtCompra" Placeholder="Compra" IsReadOnly="True" />
        <Entry x:Name="edtVenda" Placeholder="Venda" IsReadOnly="True" />
        <Entry x:Name="edtVariacao" Placeholder="Variação" IsReadOnly="True" />
        <Entry x:Name="edtPctVariacao" Placeholder="Portentagem de Variação" IsReadOnly="True" />
        <Entry x:Name="edtMax" Placeholder="Máximo" IsReadOnly="True" />
        <Entry x:Name="edtMin" Placeholder="Minímo" IsReadOnly="True" />

    </StackLayout>

</ContentPage>
